<body class="constantimg">
  <div class="row">
    <div class="col-md-6">
      <h2>Latest Matches</h2>
      <ul>

        <% @matches.each do |match| %>

        <li><%= link_to "#{match.home_team.name} vs #{match.away_team.name}", match_path(match) %> </li>

      <% end %>

      <ul>
    </div>
  <div class="col-md-6">
    <h1>All Matches</h1>
      <ul>

        <% @all_matches.each do |match| %>

          <li><%= link_to "#{match.home_team.name} vs #{match.away_team.name}", match_path(match) %> </li>

      <% end %>
      </ul>
  </div>
  </div>
</body>
